manifest.name = "Lawson Woods"
manifest.version = "0.1.0"
manifest.description = "Predicting linear epitopes using AF3"

nextflow.enable.moduleBinaries = true
conda.enabled = true

plugins {
    id 'nf-parquet'
}

includeConfig "subworkflows/tgen/af3/nextflow.config"

params.data_dir = "./data"
params.imgt_hla_path = "/tgen_labs/altin/alphafold3/IMGTHLA"

process {
    withLabel: extract_feat {
        executor = 'slurm'
        queue = "compute"
        cpus = "8"
        memory = "64 GB"
        clusterOptions = "--time=8:00:00"
    }
}